<Window x:Class="Editor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WF="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:GL="clr-namespace:WPFControls;assembly=WPFControls"
    Title="Avenyr Edityr" Height="250" Width="900">
    <Grid Name="MainGrid" KeyDown="MainGrid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="22" />
            <RowDefinition Height="27" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="FILE">
                <MenuItem Header="New">
                    <MenuItem.Icon>
                        <Image Source="/editor assets/icons/document.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open">
                    <MenuItem.Icon>
                        <Image Source="/editor assets/icons/folder-open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save">
                    <MenuItem.Icon>
                        <Image Source="/editor assets/icons/disk.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Exit" Click="Button_Close">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="EDIT">
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="ADD">
                <MenuItem Header="From file..." Click="LoadModel"/>
            </MenuItem>
            <MenuItem Header="RUN">
                <MenuItem Name="menuRunStart" Header="Start" Click="Button_Play">
                    <MenuItem.Icon>
                        <Image Source="/editor assets/icons/control.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="menuRunPause" Header="Pause" Click="Button_Pause">
                    <MenuItem.Icon>
                        <Image Source="/editor assets/icons/control-pause.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="menuRunStop" Header="Stop" Click="Button_Stop">
                    <MenuItem.Icon>
                        <Image Source="/editor assets/icons/control-stop-square.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar Grid.Row="1">
            <ToolBar.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFFFFBFF" Offset="0.5"/>
                    <GradientStop Color="#FFF7F7F7" Offset="1"/>
                </LinearGradientBrush>
            </ToolBar.Background>
            <Button Name="toolPause" Height="22" Click="Button_Pause">
                <Image Source="/editor assets/icons/control-pause.png" />
            </Button>
            <Button Name="toolStart" Height="22" Click="Button_Play">
                <Image Source="/editor assets/icons/control.png" />
            </Button>
            <Button Name="toolStop" Height="22" Click="Button_Stop">
                <Image Source="/editor assets/icons/control-stop-square.png" />
            </Button>
            <Slider Margin="6,0,6,0" Width="100" IsSnapToTickEnabled="True" TickFrequency="0.2" Minimum="0" Maximum="2" />
            <Label Width="30" Content="x2" Padding="5,1" FontSize="14" FontWeight="Bold"/>
            <Separator VerticalAlignment="Stretch" Margin="0,0,5,0"/>
            <ToggleButton Name="toolGridSnap" Height="22" Click="Button_Stop">
                <Image Source="/editor assets/icons/grid-snap.png" />
            </ToggleButton>
            <ToggleButton Name="toolPortalsVisible" Height="22" Click="toolPortalsVisible_Click">
                <Image Source="/editor assets/icons/eye.png" />
            </ToggleButton>
        </ToolBar>
        <Grid Grid.Row="2" Background="#293955">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="22" />
            </Grid.RowDefinitions>
            <Grid Name="Body">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="100" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="#293955" ShowsPreview="True" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="22" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Name="MouseWorldCoordinates" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="8,0,8,0"/>
                        <Label Grid.Column="1" Name="LabelPosition" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="8,0,8,0"/>
                        <Label Grid.Column="2" Name="LabelAngle" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="8,0,8,0"/>
                        <Label Grid.Column="3" Name="FrameRate" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="8,0,8,0"/>
                    </Grid>
                    <WindowsFormsHost  x:Name="wfContainer" Background="Black" MinWidth="100" MinHeight="100">
                        <GL:GLControlExt x:Name="glControl" Load="GLControl_Load" />
                    </WindowsFormsHost>
                </Grid>
                <Grid Grid.Column="1" Margin="4,4,4,4" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Name="ToolGrid" Margin="0,0,0,5"/>
                    <GridSplitter  Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="#293955" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Background="#007acc">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="325*"/>
                    <ColumnDefinition Width="567*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </Grid>
</Window>
