<Window x:Class="Editor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WF="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:GL="clr-namespace:WPFControls;assembly=WPFControls"
    Title="Avenyr Edityr" Height="650" Width="1000">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="22" />
            <RowDefinition Height="27" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="FILE">
                <MenuItem Header="New">
                    <MenuItem.Icon>
                        <Image Source="/assets/icons/document.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open">
                    <MenuItem.Icon>
                        <Image Source="/assets/icons/folder-open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save">
                    <MenuItem.Icon>
                        <Image Source="/assets/icons/disk.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Exit" Click="Button_Close">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="EDIT">
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="ADD">
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="RUN">
                <MenuItem Name="menuRunStart" Header="Start" Click="Button_Play">
                    <MenuItem.Icon>
                        <Image Source="/assets/icons/control.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="menuRunPause" Header="Pause" Click="Button_Pause">
                    <MenuItem.Icon>
                        <Image Source="/assets/icons/control-pause.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="menuRunStop" Header="Stop" Click="Button_Stop">
                    <MenuItem.Icon>
                        <Image Source="/assets/icons/control-stop-square.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar Grid.Row="1">
            <ToolBar.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFFFFBFF" Offset="0.5"/>
                    <GradientStop Color="#FFF7F7F7" Offset="1"/>
                </LinearGradientBrush>
            </ToolBar.Background>
            <Button Name="toolPause" Height="22" Click="Button_Pause">
                <Image Source="/assets/icons/control-pause.png" />
            </Button>
            <Button Name="toolStart" Height="22" Click="Button_Play">
                <Image Source="/assets/icons/control.png" />
            </Button>
            <Button Name="toolStop" Height="22" Click="Button_Stop">
                <Image Source="/assets/icons/control-stop-square.png" />
            </Button>
            <Slider Margin="6,0,6,0" Width="100" IsSnapToTickEnabled="True" TickFrequency="0.2" Minimum="0" Maximum="2" />
            <Label Width="30" Content="x2" Padding="5,1" FontSize="14" FontWeight="Bold"/>
            <Separator VerticalAlignment="Stretch"/>
        </ToolBar>
        <Grid Name="Body" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100"/>
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Left" VerticalAlignment="Stretch" />
            <WindowsFormsHost  x:Name="wfContainer" Background="Black" MinWidth="100" MinHeight="100">
                <GL:GLControlExt x:Name="glControl" Load="GLControl_Load" Resize="GLControl_Resize" />
            </WindowsFormsHost>
            <Grid Grid.Column="1" Name="gridSideColumn" Margin="5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GridSplitter Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
                <WrapPanel Name="ToolPanel" Margin="0,0,0,5">
                </WrapPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
