<UserControl x:Class="EditorWindow.Time"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorWindow"
             mc:Ignorable="d" >
    <WrapPanel Margin="4,0,4,0">
        <Label Content="Time" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="4,0,4,0"/>
        <TextBox Name="TimeValue" Width="60" HorizontalContentAlignment="Right" LostKeyboardFocus="TimeValue_LostKeyboardFocus" KeyDown="TimeValue_KeyDown"/>
    </WrapPanel>
</UserControl>
